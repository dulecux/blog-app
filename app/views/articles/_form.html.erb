<%= form_for(@article, html: {multipart: true}) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <% form.label :title %>
    <%= form.text_field :title, class:"form-control", placeholder:"Title" %>
  </div>

  <div class="field form-group">
    <% form.label :description %>
    <%= form.text_area :description, class:"form-control", placeholder:"Description" %>
  </div>

   <div class="field form-group">
    <% form.label :tag_list %>
    <%= form.text_area :tag_list, class:"form-control", placeholder:"Tag List" %>
  </div>

  <div class="field form-group">
     <% if @article.image.exists? %>
         <%= image_tag @article.image.url %><br/>
     <% end %>    
         <% form.label :image, "Attach an Image" %><br />
   <%= form.file_field :image, class:"form-control", placeholder:"Image" %>
  </div>

 <div class="field form-group">
<%= form.number_field :author_id, id: :articles_author_id, class:"form-control", value:current_author.id, type: :hidden %>
 </div>

  <div class="actions">
    <%= form.submit class:"btn btn-success" %>
  </div>
  <br/>
<% end %>
